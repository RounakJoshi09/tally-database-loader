<?xml version="1.0" encoding="utf-8"?>
<ENVELOPE>
    <HEADER>
        <VERSION>1</VERSION>
        <TALLYREQUEST>Export</TALLYREQUEST>
        <TYPE>Data</TYPE>
        <ID>MyReport</ID>
    </HEADER>
    <BODY>
        <DESC>
            <STATICVARIABLES>
                <SVEXPORTFORMAT>$$SysName:ASCII</SVEXPORTFORMAT>
                <SVFROMDATE>{fromDate}</SVFROMDATE>
            </STATICVARIABLES>
            <TDL>
                <TDLMESSAGE>
                    <REPORT NAME="MyReport">
                        <FORMS>MyForm</FORMS>
                    </REPORT>
                    <FORM NAME="MyForm">
                        <PARTS>MyPart</PARTS>
                    </FORM>
                    <PART NAME="MyPart">
                        <LINE>MyLine</LINE>
                        <REPEAT>MyLine : MyCollection</REPEAT>
                        <SCROLLED>Vertical</SCROLLED>
                    </PART>
                    <LINE NAME="MyLine">
                        <FIELDS>FldGuid,FldName,FldParent,FldUOM,FldOpeningQuantity,FldOpeningValue,FldGstNatureOfGoods,FldGstHsnCode,FldGstTaxability,FldEOL</FIELDS>
                    </LINE>
                    <FIELD NAME="FldGuid">
                        <SET>$Guid</SET>
                    </FIELD>
                    <FIELD NAME="FldName">
                        <SET>$$StringFindAndReplace:$Name:'"':'""'</SET>
                    </FIELD>
                    <FIELD NAME="FldParent">
                        <SET>$$StringFindAndReplace:$Parent:'"':'""'</SET>
                    </FIELD>
                    <FIELD NAME="FldUOM">
                        <SET>$$StringFindAndReplace:$BaseUnits:'"':'""'</SET>
                    </FIELD>
                    <FIELD NAME="FldOpeningQuantity">
                        <SET>$$StringFindAndReplace:(if $$IsInwards:$OpeningBalance then $$NumValue:$OpeningBalance else -$$NumValue:$OpeningBalance):"(-)":"-"</SET>
                    </FIELD>
                    <FIELD NAME="FldOpeningValue">
                        <SET>$$StringFindAndReplace:(if $$IsDebit:$OpeningValue then -$$NumValue:$OpeningValue else $$NumValue:$OpeningValue):"(-)":"-"</SET>
                    </FIELD>
                    <FIELD NAME="FldGstNatureOfGoods">
                        <SET>if ($$IsEqual:$GstApplicable:($$SysName:Applicable) AND NOT $$IsEmpty:$GstDetails[Last].Natureofgoods) then $GstDetails[Last].Natureofgoods else $$StrByCharCode:245</SET>
                    </FIELD>
                    <FIELD NAME="FldGstHsnCode">
                        <SET>if ($$IsEqual:$GstApplicable:($$SysName:Applicable) AND NOT $$IsEmpty:$GstDetails[Last].Hsncode) then $GstDetails[Last].Hsncode else $$StrByCharCode:245</SET>
                    </FIELD>
                    <FIELD NAME="FldGstTaxability">
                        <SET>if ($$IsEqual:$GstApplicable:($$SysName:Applicable) AND NOT $$IsEmpty:$GstDetails[Last].Taxability) then $GstDetails[Last].Taxability else $$StrByCharCode:245</SET>
                    </FIELD>
                    <FIELD NAME="FldEOL">
                        <SET>â€ </SET>
                    </FIELD>
                    <COLLECTION NAME="MyCollection">
                        <TYPE>StockItem</TYPE>
                        <FETCH>GstDetails</FETCH>
                    </COLLECTION>
                </TDLMESSAGE>
            </TDL>
        </DESC>
    </BODY>
</ENVELOPE>